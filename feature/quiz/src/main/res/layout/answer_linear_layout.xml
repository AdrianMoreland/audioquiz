<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="500dp">

        <!-- Option One Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_1_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/answer_placeholder_string"
            android:insetBottom="8dp"
            />

        <!-- Option Two Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_2_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:text="@string/answer_placeholder_string"
            />

        <!-- Option Three Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_3_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:text="@string/answer_placeholder_string"
            />

        <!-- Option Four Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_4_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:insetTop="8dp"
            android:text="@string/answer_placeholder_string"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>