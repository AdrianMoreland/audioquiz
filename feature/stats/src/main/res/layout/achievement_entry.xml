<!-- File: res/layout/achievement_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginHorizontal="16dp">

    <ImageView
        android:id="@+id/achievement_icon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_badge_soundwaves"
        android:contentDescription="badge_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/achievement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Soundwaves"
            android:textAppearance="@style/TextAppearance.Reply.Headline5"
            android:textColor="@color/md_theme_onSurface"/>

        <TextView
            android:id="@+id/achievement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Complete the Soundwave categoryUi"
            android:textAppearance="@style/TextAppearance.Reply.Body1"
            android:textColor="@color/md_theme_onSurfaceVariant"/>
    </LinearLayout>
</LinearLayout>