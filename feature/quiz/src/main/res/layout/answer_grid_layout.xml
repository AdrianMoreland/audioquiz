<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/answergridframe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Option One Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_1_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:insetRight="5dp"
            android:insetBottom="5dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/answer_placeholder_string" />

        <!-- Option Two Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_2_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:insetBottom="5dp"
            android:insetLeft="5dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/answer_placeholder_string" />

        <!-- Option Three Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_3_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:insetRight="5dp"
            android:insetTop="5dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/answer_placeholder_string" />

        <!-- Option Four Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_4_button"
            style="@style/Custom.Material.AnswerOptionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:insetLeft="5dp"
            android:insetTop="5dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="@string/answer_placeholder_string" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
