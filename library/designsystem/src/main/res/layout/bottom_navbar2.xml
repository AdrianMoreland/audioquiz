<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
    android:id="@+id/bottom_navigation_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_learn"
        style="@style/Custom.Material.NavbarButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="2dp"
        app:backgroundTint="@color/md_theme_navbarActive"
        app:icon="@drawable/ic_learn"
        app:iconTint="@color/md_theme_onBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play"
        style="@style/Custom.Material.NavbarButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="2dp"
        app:backgroundTint="@color/md_theme_navbarInactive"
        app:icon="@drawable/ic_play" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stats"
        style="@style/Custom.Material.NavbarButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        app:backgroundTint="@color/md_theme_navbarInactive"
        app:icon="@drawable/ic_insights" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rank"
        style="@style/Custom.Material.NavbarButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="2dp"
        app:backgroundTint="@color/md_theme_navbarInactive"
        app:icon="@drawable/ic_achievements" />
</LinearLayout>
</androidx.appcompat.widget.Toolbar>
