<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/linearLayout9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_title_screen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Learn"
                    android:textColor="@color/md_theme_onBackground"
                    android:textSize="30sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_rounded_12dp"
                android:orientation="vertical"
                android:paddingVertical="24dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_rounded_12dp"
                    android:clipChildren="true">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_learn_cover"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_learn" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_title_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:includeFontPadding="false"
                    android:text="Develop Your Audio Skills"
                    android:textAppearance="@style/TextAppearance.Reply.Headline5"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/r3v84xjtko2m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:includeFontPadding="false"
                    android:text="One Quiz at a Time"
                    android:textAppearance="@style/TextAppearance.Reply.Headline6"
                    android:textColor="#66FAFAFA"
                    android:textSize="21sp" />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:transitionName="card_transition"
                app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toTopOf="@+id/card8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                app:rippleColor="@color/md_theme_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingTop="18dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginHorizontal="21dp"
                        android:layout_marginBottom="20dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:src="@drawable/ic_soundwaves" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Pitch Recognition"
                        android:textAppearance="@style/TextAppearance.Reply.Headline5"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:transitionName="card_transition"
                app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toTopOf="@+id/card8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                app:rippleColor="@color/md_theme_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingTop="18dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginHorizontal="21dp"
                        android:layout_marginBottom="20dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:src="@drawable/ic_soundwaves" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Interval Recognition"
                        android:textAppearance="@style/TextAppearance.Reply.Headline5"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:transitionName="card_transition"
                app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toTopOf="@+id/card8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                app:rippleColor="@color/md_theme_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingTop="18dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginHorizontal="21dp"
                        android:layout_marginBottom="20dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:src="@drawable/ic_soundwaves" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Everything"
                        android:textAppearance="@style/TextAppearance.Reply.Headline5"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
